{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Application Traffic (RPS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        { "expr": "sum(rate(root_access_total[1m]))", "legendFormat": "Requests/sec" }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "Event Loop Lag (P99)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        { "expr": "nodejs_eventloop_lag_p99_seconds", "legendFormat": "Lag" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 0.1 }] } }
      }
    },
    {
      "title": "Resident Memory Usage (RSS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        { "expr": "process_resident_memory_bytes / 1024 / 1024", "legendFormat": "RSS Memory" }
      ],
      "fieldConfig": { "defaults": { "unit": "decbytes" } }
    },
    {
      "title": "Active Handles & Resources",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        { "expr": "nodejs_active_handles_total", "legendFormat": "Handles" },
        { "expr": "nodejs_active_resources_total", "legendFormat": "Resources" }
      ]
    }
  ],
  "refresh": "5s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["nodejs", "devops-project"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Node.js App Metrics",
  "uid": "nodejs-app-dashboard"
}
